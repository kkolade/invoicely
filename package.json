{
  "name": "invoicely",
  "version": "1.0.0",
  "description": "Invoice management app built using Node.js",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node ./www/start.js --exec babel-node",
    "dev": "nodemon ./www/start.js --exec babel-node",
    "test": "vitest --run",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint \"**/*.{js,jsx}\"",
    "lint:css": "stylelint \"src/**/*.scss\"",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix && echo 'Lint complete.'",
    "format": "npx run prettier ./**/*.{js,jsx,ts,tsx,css,md,json,scss} --config ./.prettierrc.json",
    "format:fix": "npm run prettier --write && echo 'Lint complete.'",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{css,scss,pcss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.18.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.3",
    "morgan": "^1.10.0",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.7",
    "@babel/core": "^7.24.7",
    "@babel/node": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "ejs-lint": "^2.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.2.0",
    "globals": "^15.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.2",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-scss": "^6.3.1",
    "supertest": "^7.0.0",
    "vitest": "^1.6.0"
  }
}
